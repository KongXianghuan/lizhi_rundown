body, html, .container
  width: 100%
  height: 100%
  overflow: hidden
  margin: 0
  padding: 0

body, div, p
	font-family: Helvetica, Arial, "Microsoft Yahei", FreeSans, Arimo, "Droid Sans", "wenquanyi micro hei", "Hiragino Sans GB", "Hiragino Sans GB W3", sans-serif

div.page.hide
  display: none

.container
	position: relative
	-webkit-transition: all 1s ease
	&.hide
		opacity: 0

.music
	position: fixed
	right: 50px
	top: 30px
	z-index: 80
	width: 60px
	height: 69px
	background: url("../../images/music.png") 0 0 no-repeat
	&.off
		background: url("../../images/music.png") -60px 0 no-repeat

.scrollWrap
	position: absolute
	top: 0
	bottom: 0
	left: 0
	width: 8660px
	-webkit-backface-visibility: hidden;
	-webkit-perspective: 1000;
	-webkit-transition-property: all
	-webkit-transition-timing-function: linear
	overflow: hidden
	&.toLeft
		-webkit-transform: translate3d(0,0,0) !important
	&.toRight
		-webkit-transform: translate3d(-8020px,0,0) !important
	.fire
		width: 486px
		height: 613px
		background: url("../../images/fire.png") center no-repeat
		position: absolute
		right: 0
		top: 0

.pageWrap
	white-space: nowrap
	position: absolute
	top: 0
	bottom: 168px
	left: 0
	background: #031324
	width: 100%
	.page
		width: 640px
		height: 100%
		position: absolute
		bottom: 0
		&.scale
			-webkit-transform: scale(.9)
			bottom: -45px
		.flag
			position: absolute
			bottom: -43px
			left: 0
			width: 100px
			height: 226px
			z-index: 25
	#page0
		.title
			width: 519px
			height: 266px
			background: url("../../images/guide_title.png") center no-repeat
			position: absolute
			left: 50%
			-webkit-transform: translateX(-50%)
			top: 160px

.scrollWrap.top
	z-index: 35
	.flag-end
		position: absolute
		left: 8200px
		bottom: 0
		z-index: 40
		width: 266px
		height: 551px
		background: url("../../images/flag_end.png") center no-repeat

.tip-click
	width: 126px
	height: 136px
	position: fixed
	left: 50%
	bottom: 20px
	margin-left: -63px
	z-index: 40
	-webkit-transition: all .3s ease
	&.hide
		opacity: 0
	.tip-click-radius
		width: 78px
		height: 78px
		margin: 0 auto
		position: relative
	.tip-click-inner, .tip-click-outer
		position: absolute
		left: 13px
		top: 13px
		z-index: 2
		width: 52px
		height: 52px
		border-radius: 50%
		background: rgba(255,255,255,.5)
	.tip-click-outer
		background: rgba(255,255,255,.5)
		animate(tipScale, 1s)
	.tip-click-text
		position: absolute
		left: 0
		bottom: 0 
		text-align: center
		width: 100%
		color: #fff
		opacity: .8
		font-size: 22px
		line-height: 1

.share-layer
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 110
	background: rgba(0, 0, 0, .8) url("../../images/share.png") right top no-repeat

.fade-transition {
  transition: all .3s ease;
  opacity: 1
}

.fade-enter, .fade-leave {
  opacity: 0;
}

