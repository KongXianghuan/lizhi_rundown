@import 'animate'

#page7
  left: 5745px
  .title
    position: absolute
    width: 413px
    height: 108px
    left: 50%
    bottom: 680px
    -webkit-transform: translateX(-50%)
    background: url("../../images/page7_title.png") center no-repeat
  .flag
    background: url("../../images/flag9.png") center no-repeat
  .page-bg
    position: absolute
    right: -70px
    bottom: 280px
    width: 484px
    height: 380px
    background: url("../../images/page7_bg.png") center no-repeat
  .xidada
    position: absolute
    width: 507px
    height: 636px
    bottom: 12px
    left: 50%
    z-index: 2
    -webkit-transform: scale(.5) translate(-800px, -220px)
  .xidada-body
    background: url("../../images/xidada.png") center no-repeat
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    z-index: 2
  .xidada-hand
    width: 45px
    height: 60px
    background: url("../../images/xidada_hand.png") center no-repeat
    position: absolute
    left: 178px
    top: 172px

  &.animated
    .xidada
      animate(car, 1.5s, 50%, 50%, 0)
      -webkit-animation-iteration-count: 1
    .xidada-hand
      animate(xiShakeHand, 1.5s, 20px, 60px, 2s)
