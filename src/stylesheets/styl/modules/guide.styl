@import 'animate'

.guide
	position: absolute
	width: 640px
	height: 100%
	left: 0
	top: 0
	z-index: 20
	background: rgba(0,0,0,.5)
	-webkit-transition: all 300ms ease
	&.hide
		opacity: 0
	.tip
		width: 320px
		height: 200px
		position: absolute
		bottom: 240px
		left: 50%
		-webkit-transform: translateX(-50%)
		> div
			position: absolute
		&.hide
			animate(tipOut, 1s)
			-webkit-animation-iteration-count: 1
		.tip-arrow
			width: 57px
			height: 25px
			top: 40px
			left: 160px
			background: url("../../images/guide_arrow.png") center no-repeat
		.tip-text
			width: 100%
			bottom: 0
			p
				text-align: center
				color: #fff
				font-size: 22px
				margin: 0
				line-height: 1
				letter-spacing: 5px
				&:last-child
					margin-top: 20px
					text-indent: 26px
		.tip-phone
			width: 60px
			height: 100px
			top: 0
			left: 50%
			background: url("../../images/phone2.png") center no-repeat
			background-size: 60px 100px
			margin-left: -32px


